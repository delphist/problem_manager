<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin", :role => "form" } ) do |f| %>
    <h2 class="form-signin-heading">Авторизация</h2>

    <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email", :required => true %>
    <%= f.password_field :password, :class => "form-control", :placeholder => "Пароль", :required => true %>

    <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
          <%= f.check_box :remember_me %> Запомнить
        </label>
    <% end -%>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
<% end %>