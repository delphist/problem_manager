<table class="table table-hover">
  <thead>
  <tr>
    <td class="col-md-9">Название</td>
    <td class="col-md-3"></td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.title, edit_subject_path(subject) %></td>
        <td class="text-right">
          <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_subject_path(subject), :class => "btn btn-xs" %>
          <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, delete_subject_path(subject), :class => "btn btn-xs" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @subjects %>

<a href="<%= new_subject_path %>" class="btn btn-primary">Добавить тематику</a>