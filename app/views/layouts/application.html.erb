<% breadcrumbs do |links| %>
    <% if links.any? %>
        <% content_for :title do %>
            <%= links[1..-1].reverse.map { |e| e.text }.join(" → ") %> — PM
        <% end %>
    <% end %>
<% end %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= yield :title %></title>
  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag 'http://api-maps.yandex.ru/2.0-stable/?load=package.full&lang=ru-RU&key=ABNH0FIBAAAA0Zi6CAQAbLISlmfhRbXESp8VRwEfF0MhzCYAAAAAAAAAAABBKs17mwbwLMyDtHU2ko8pXFWzuA==' %>
  <%= javascript_include_tag "application" %>
</head>
<body>
<div id="wrap">
  <div class="container">
    <div class="navbar navbar-default navbar-inverse" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Меню</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">PM</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="<%= problems_path %>">Проблемы</a></li>
          <li><a href="<%= problems_path(:view => :map) %>">Карта</a></li>
          <li><a href="<%= subjects_path %>">Тематики</a></li>
          <li><a href="<%= statuses_path %>">Статусы</a></li>
          <li><a href="<%= tasks_path %>">Задания <span class="badge"><%= @highlighted_tasks %></span></a></li>
          <li><a href="<%= users_path %>">Пользователи</a></li>
        </ul>
      </div>
    </div>

    <div class="page-header">
      <h3>
        <% if content_for?(:heading) %>
            <%= yield :heading %>
        <% else %>
            <% breadcrumbs do |links| %>
                <% if links.any? %>
                    <%= links.last.text %>
                <% end %>
            <% end %>
        <% end %>
        <%= yield :heading_buttons %>
      </h3>
    </div>

    <%= breadcrumbs style: :bootstrap %>

    <%= yield %>
  </div>
</div>

<div id="footer">
  <div class="container">
    <p class="text-muted">&copy; 2014 / Support: <a href="mailto:xdelphist@gmail.com">xdelphist@gmail.com</a></p>
  </div>
</div>

</body>
</html>
